<h1>Listado de ofertas</h1>

<div class="offers">
</div>

<div class="block" id="block-lists">
  <div class="content">
    <div class="inner">
      <ul class="list offers">
        <% @offers.each do |offer| %>
          <li>
            <div class="left">
              <a href="#"><img class="avatar" src="/images/profilemissing.png" alt="avatar"></a>
              <div class="price">
                <%= pluralize offer.price, offer.pricing_type %> 
              </div>
            </div>
            <div class="item">
              <h3> Se <%= offer.offer_type %>: <%= link_to offer.title, offer %> </h3>
              <p id="description"><%= markdown offer.description %></p>
            </div>
          </li>
        <% end %>
        <div class="clear"></div>
      </ul>
    </div>
  </div>
</div>

<br />

