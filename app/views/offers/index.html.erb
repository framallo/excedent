<h1>Listing offers</h1>

<table class="offers">
  <tr>
    <th>Ofertas</th>
    <th>Precio</th>
    <th>Tipo</th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= link_to offer.title, offer %></td>
    <td><%= pluralize offer.price, offer.pricing_type %> </td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Offer', new_offer_path %>
